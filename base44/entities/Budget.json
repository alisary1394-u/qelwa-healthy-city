{
  "name": "Budget",
  "type": "object",
  "title": "ميزانية",
  "description": "ميزانيات المدينة الصحية",
  "properties": {
    "name": { "type": "string", "maxLength": 200 },
    "fiscal_year": { "type": "string", "maxLength": 20 },
    "start_date": { "type": "string", "format": "date" },
    "end_date": { "type": "string", "format": "date" },
    "total_budget": { "type": "number", "minimum": 0, "default": 0 },
    "allocated_budget": { "type": "number", "minimum": 0, "default": 0 },
    "spent_amount": { "type": "number", "minimum": 0, "default": 0 },
    "remaining_budget": { "type": "number", "default": 0 },
    "description": { "type": "string", "maxLength": 1000 },
    "notes": { "type": "string", "maxLength": 1000 },
    "status": { "type": "string", "enum": ["draft", "active"], "default": "draft" }
  },
  "rls": { "create": true, "read": true, "update": true, "delete": true }
}
