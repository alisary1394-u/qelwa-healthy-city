{
  "name": "Evidence",
  "type": "object",
  "title": "دليل",
  "description": "أدلة تحقيق المعايير",
  "properties": {
    "title": { "type": "string", "maxLength": 300 },
    "description": { "type": "string", "maxLength": 2000 },
    "file_url": { "type": "string", "maxLength": 500 },
    "file_type": { "type": "string", "enum": ["image", "document"], "default": "document" },
    "standard_id": { "type": "string", "maxLength": 100 },
    "standard_code": { "type": "string", "maxLength": 50 },
    "axis_id": { "type": "string", "maxLength": 100 },
    "uploaded_by_name": { "type": "string", "maxLength": 200 },
    "status": { "type": "string", "enum": ["pending", "approved", "rejected"], "default": "pending" },
    "approved_by": { "type": "string", "maxLength": 200 },
    "approved_at": { "type": "string", "format": "date-time" },
    "rejection_reason": { "type": "string", "maxLength": 500 }
  },
  "required": ["title"],
  "rls": { "create": true, "read": true, "update": true, "delete": true }
}
