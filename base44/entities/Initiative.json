{
  "name": "Initiative",
  "type": "object",
  "title": "مبادرة",
  "description": "مبادرات المدينة الصحية",
  "properties": {
    "code": { "type": "string", "maxLength": 50 },
    "title": { "type": "string", "maxLength": 300 },
    "description": { "type": "string", "maxLength": 3000 },
    "objectives": { "type": "string", "maxLength": 2000 },
    "committee_id": { "type": "string", "maxLength": 100 },
    "committee_name": { "type": "string", "maxLength": 200 },
    "axis_id": { "type": "string", "maxLength": 100 },
    "axis_name": { "type": "string", "maxLength": 200 },
    "related_standards": { "type": "array", "items": { "type": "string" } },
    "target_audience": { "type": "string", "maxLength": 300 },
    "expected_beneficiaries": { "type": "integer", "minimum": 0, "default": 0 },
    "start_date": { "type": "string", "format": "date" },
    "end_date": { "type": "string", "format": "date" },
    "budget": { "type": "number", "minimum": 0, "default": 0 },
    "actual_cost": { "type": "number", "minimum": 0, "default": 0 },
    "leader_id": { "type": "string", "maxLength": 100 },
    "leader_name": { "type": "string", "maxLength": 200 },
    "team_members": { "type": "array", "items": { "type": "string" } },
    "priority": { "type": "string", "enum": ["low", "medium", "high", "urgent"], "default": "medium" },
    "impact_level": { "type": "string", "enum": ["low", "medium", "high", "very_high"], "default": "medium" },
    "location": { "type": "string", "maxLength": 200 },
    "partners": { "type": "string", "maxLength": 500 },
    "notes": { "type": "string", "maxLength": 2000 },
    "status": { "type": "string", "enum": ["planning", "approved", "in_progress", "completed", "on_hold", "cancelled"], "default": "planning" },
    "progress_percentage": { "type": "number", "minimum": 0, "maximum": 100, "default": 0 },
    "approval_date": { "type": "string", "format": "date" },
    "approved_by": { "type": "string", "maxLength": 200 }
  },
  "required": ["title"],
  "rls": { "create": true, "read": true, "update": true, "delete": true }
}
