{
  "name": "Notification",
  "type": "object",
  "title": "إشعار",
  "description": "إشعارات المستخدمين",
  "properties": {
    "user_email": { "type": "string", "format": "email", "maxLength": 200 },
    "title": { "type": "string", "maxLength": 200 },
    "message": { "type": "string", "maxLength": 2000 },
    "type": { "type": "string", "maxLength": 50 },
    "related_id": { "type": "string", "maxLength": 100 },
    "is_read": { "type": "boolean", "default": false }
  },
  "required": ["user_email"],
  "rls": { "create": true, "read": true, "update": true, "delete": true }
}
