{
  "name": "Standard",
  "type": "object",
  "title": "معيار",
  "description": "معايير منظمة الصحة العالمية للمدينة الصحية",
  "properties": {
    "code": { "type": "string", "maxLength": 50 },
    "title": { "type": "string", "maxLength": 300 },
    "description": { "type": "string", "maxLength": 3000 },
    "axis_id": { "type": "string", "maxLength": 100 },
    "axis_name": { "type": "string", "maxLength": 200 },
    "required_evidence": { "type": "string", "maxLength": 1000 },
    "required_documents": { "type": "string", "maxLength": 3000 },
    "kpis": { "type": "string", "maxLength": 3000 },
    "status": { "type": "string", "enum": ["not_started", "in_progress", "completed", "approved"], "default": "not_started" }
  },
  "required": ["code"],
  "rls": { "create": true, "read": true, "update": true, "delete": true }
}
